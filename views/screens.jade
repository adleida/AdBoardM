extends layout

block content
    div.container
        div.row
            div.col-xs-3.col-md-2
                div
                    div
                    div
                ul.nav.nav-pills.nav-stacked
                    li.active
                        a(href="#screens-gis",data-toggle="tab")
                            | 用户资料
                    li
                        a(href="#screens-list", data-toggle="tab")
                            | 消息中心
            div.col-xs-9.col-md-10
                div.row.user-header
                    div.col-md-4.col-xs-12.col-sm-6
                        span.glyphicon.glyphicon-usd.class-icon
                        div.stat-span
                            div
                                | 屏总数
                            div
                                | #{balance}
                    div.col-md-4.col-xs-12.col-sm-6
                        span.glyphicon.glyphicon-list.class-icon
                        div.stat-span
                            div
                                | 物料总数
                            div
                                | #{creatives}
                    div.col-md-4.col-xs-12.col-sm-6
                        span.glyphicon.glyphicon-play-circle.class-icon
                        div.stat-span
                            div
                                | 总投放量
                            div
                                | 2024433.23元
                div.divider
                div.tab-content
                    div#screens-gis.tab-pane.active
                        div.row.text-center
                            h1
                                | 互动广告屏分布图
                        div.row
                            div.col-md-8.col-xs-12.col-sm-12
                                div#screen-map(style="height:500px;border:1px solid #000000")
                            div#screen-detail.col-md-4.col-xs-12.col-sm-12.well
                                | 详细信息
                    div#screens-list.tab-pane
    script(src="http://api.map.baidu.com/api?v=1.5&ak=mYCvhgZoPh1bXmYVH7hQy0Wb")
    script(src="javascripts/lib/screenMap.js")
    script(src="javascripts/screens.js")